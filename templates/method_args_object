[% USE Dumper; Dumper.dump(method) %]
package [% c.service %]::[% method_name %];
  use Moose;

  [%- FOREACH p = method.parameters %]
  [% property = c.resolve_parameter_ref(p) %]
  has [% property.name %] => (is => 'ro'[% IF (property.required) %], required => 1[% END %]);
  [%- END %]

  class_has path => (is => 'ro', default => '[% method.path %]');

1;
